{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "lib": ["DOM", "ES2022", "ESNext.Disposable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmitOnError": true,
    "outDir": "build",
    "target": "ES2018",
    "tsBuildInfoFile": "build/.tsinfo"
  },
  "exclude": ["src/Test.ts", "src/**/*.test.ts", "src/**/*.typetest.ts"],
  "extends": "./tsconfig-base.json",
  "include": ["src"]
}
